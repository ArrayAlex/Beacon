<UserControl x:Class="Beacon.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#121212">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Change Theme" Foreground="#FFFFFF" FontSize="18" Margin="0,0,0,10"/>
            <ComboBox Name="ThemeComboBox" Background="#282828" Foreground="#FFFFFF" BorderBrush="#1DB954" BorderThickness="2">
                <ComboBoxItem Content="Light"/>
                <ComboBoxItem Content="Dark"/>
            </ComboBox>

            <TextBlock Text="Change Username" Foreground="#FFFFFF" FontSize="18" Margin="20,20,0,10"/>
            <TextBox Name="UsernameTextBox" Height="30" Background="#282828" Foreground="#FFFFFF" BorderBrush="#1DB954" BorderThickness="2"/>
            
            <TextBlock Text="Enable Notifications" Foreground="#FFFFFF" FontSize="18" Margin="20,20,0,10"/>
            <CheckBox Name="NotificationsCheckBox" Foreground="#FFFFFF"/>
            
            <Button Content="Save Changes" Width="150" Height="40" Background="#1DB954" Foreground="#FFFFFF" FontWeight="Bold" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>