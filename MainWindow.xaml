<Window x:Class="Beacon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beacon"
        mc:Ignorable="d"
        Title="Beacon" Height="600" Width="1000" Background="#121212">
    <Grid>
        <!-- Header -->
        <Border Background="#1DB954" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Beacon Chat App" Foreground="#FFFFFF" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="20"/>
        </Border>
        
        <!-- Sidebar -->
        <Border Background="#282828" Width="200" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <StackPanel>
                <Button Content="Home" Background="#1DB954" Foreground="#FFFFFF" Height="50" Margin="5" Click="HomeButton_Click"/>
                <Button Content="Chats" Background="#282828" Foreground="#FFFFFF" Height="50" Margin="5" Click="ChatsButton_Click"/>
                <Button Content="Settings" Background="#282828" Foreground="#FFFFFF" Height="50" Margin="5" Click="SettingsButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content Area -->
        <ContentControl Name="MainContentControl" Margin="200,60,0,0"/>
    </Grid>
</Window>